#!/bin/bash

link=$(grep -Eo 'https://[A-Za-z0-9\.&%?\/\=_-+]*|http://[A-Za-z0-9\.&%?\/\=_-+]*|gopher://[A-Za-z0-9\.&%?\/\=_-+]*' < /dev/stdin 2>/dev/null| dmenu -i -p 'Select url')

IFS=$'\n'

hand=$(printf "mpv
popupmpv
youtube-dl --add-metadata -ic
youtube-dl --add-metadata -xic
vimb --no-maximize
xclip
webimg
webkmv
st -e curl" | dmenu -i -p "Select a handler:")

pkill mpvlisten
hmpv pause /tmp/mpv-socket
hmpv pause /tmp/mpv-socket2
sh -c "$hand $link"
mpvlisten /tmp/mpv-socket2 /tmp/mpv-socket &
