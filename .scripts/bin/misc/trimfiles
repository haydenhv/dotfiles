dirs=$(ls -d */ */*/ */*/*/ 2>/dev/null)
for dir in $dirs
do
	cd $dir
	for f in *; do mv "$f" `echo $f | tr ' ' '.'`; done
	backdir=$(echo $dir | tr "/" "\n" | wc -l)
	backdir=$(($backdir-1))
	for i in `seq $backdir`
	do
		cd ../
	done
done
