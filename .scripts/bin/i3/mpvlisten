#!/bin/bash
socket1="$1"
socket2="$2"
apause="false"

while true
do 
	state=$(hmpv state $socket1)
	sleep 0.1
	if [ "$state" == "playing" ]
	then
		if [ "$aplay" == "false" ]
		then
			hmpv pause $socket2
			apause="false"
			aplay="true"
		fi
	else
		if [ "$apause" == "false" ]
		then
			hmpv unpause $socket2
			apause="true"
			aplay="false"
		fi
	fi
done
