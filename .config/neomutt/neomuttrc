set ssl_starttls = yes
set ssl_force_tls = yes
source user
source pass
set smtp_authenticators = "plain"

set spoolfile = "~/mail/inbox"
set record = "~/mail/sent"
set postponed = "~/mail/drafts"
set trash = "~/mail/rubbish"
